<h1>注文画面</h1>
  <%= form_with url: confirmation_path(current_customer), method: :get do |f| %>
    <h4>支払方法</h4>
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>

    <h4>お届け先</h4>
    <%= f.label :select_address, "住所1" %>
    <%= f.radio_button :select_address, 1 %>
    <%= current_customer.address %><br>

    <%= f.radio_button :select_address, 2 %>
    <%= f.select :address, options_from_collection_for_select(Address.where(customer_id: current_customer), :id, :address_display) %><br>

    <%= f.radio_button :select_address, 3 %>
    
    <%= f.label :address %>
    <%= f.text_field :address %>

    <%= f.submit "送信" %>
  <% end %>
